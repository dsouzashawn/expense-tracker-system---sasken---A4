<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#EEEEEE" android:layout_marginBottom="6dp">

    <TextView
        android:id="@+id/typeText"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/categoryText"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/amountText"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:textColor="#888888"
        android:textSize="12sp" />


</LinearLayout>